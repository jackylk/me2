# Me2 Backend Configuration Template
# For local development: copy to .env and fill in your values
# For Railway: set these in Railway dashboard Variables

# DeepSeek API
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Embedding Provider: "local" (需要 torch), "remote" (API), "auto" (先本地后远程)
EMBEDDING_PROVIDER=remote

# 远程 Embedding API (SiliconFlow, OpenAI, etc.)
OPENAI_API_KEY=your-embedding-api-key-here
OPENAI_BASE_URL=https://api.siliconflow.cn/v1
REMOTE_EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5
REMOTE_EMBEDDING_DIMENSIONS=1024

# 本地 Embedding (可选，需 pip install sentence-transformers torch)
EMBEDDING_MODEL=BAAI/bge-small-zh-v1.5
EMBEDDING_DIMENSIONS=512

# Database
# Local: postgresql+asyncpg://user:password@localhost:5432/neuromemory
# Railway: Will be auto-provided as DATABASE_URL
DATABASE_URL=postgresql+asyncpg://neuromemory:neuromemory@localhost:5432/neuromemory

# Security (MUST change in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production
JWT_SECRET=change-me-in-production-use-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# App Settings
DEBUG=False
APP_NAME=Me2
APP_VERSION=0.1.0

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# NeuroMemory Configuration
NEUROMEMORY_EXTRACTION_INTERVAL=10
NEUROMEMORY_REFLECTION_INTERVAL=20
NEUROMEMORY_IDLE_TIMEOUT=600
NEUROMEMORY_GRAPH_ENABLED=True

# Image Storage
IMAGE_STORAGE_TYPE=local
IMAGE_MAX_SIZE=10485760
